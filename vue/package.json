{
    "name": "landlord",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "start": "webpack-dev-server --mode=development --host=127.0.0.1",
        "dist": "npm run manager && npm run lint && webpack --mode=production",
        "manager": "cd ../manager && npm install -d && npm run lint && webpack --mode=production && cd ../vue",
        "local": "npm run manager && npm run lint && webpack --mode=production --env target=local && npm run java",
        "java": "cd ../landlord && mvn clean package -DskipTests -Dlocal=true",
        "deploy": "npm run manager && npm run lint && webpack --mode=production --env target=tos && npm run java",
        "lint": "eslint --fix --ext .js,.vue ./src"
    },
    "dependencies": {
        "core-js": "^3.6.5"
    },
    "devDependencies": {
        "@babel/core": "^7.23.5",
        "@babel/plugin-syntax-jsx": "^7.23.3",
        "@babel/plugin-transform-runtime": "^7.17.0",
        "@babel/preset-env": "^7.23.5",
        "@vue/babel-plugin-jsx": "^1.1.5",
        "@vue/babel-preset-app": "^5.0.8",
        "@vue/compiler-sfc": "^3.4.15",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.2.4",
        "css-loader": "^3.5.3",
        "eslint": "^7.28.0",
        "eslint-plugin-vue": "^8.4.1",
        "fs-extra": "^10.0.0",
        "prettier": "^2.5.1",
        "prismjs": "^1.22.0",
        "sass": "^1.83.0",
        "sass-loader": "^16.0.4",
        "style-loader": "^3.3.1",
        "terser-webpack-plugin": "^5.3.1",
        "vue": "^3.4.21",
        "vue-loader": "^17.3.1",
        "webpack": "^5.99.9",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^4.15.2",
        "zen-app-icon": "^0.1.0",
        "zen-app-plugin": "^0.5.10"
    },
    "eslintIgnore": [
        "public/*",
        "dist/*"
    ],
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/vue3-essential",
            "eslint:recommended"
        ],
        "plugins": [
            "vue"
        ],
        "parserOptions": {
            "parser": "babel-eslint",
            "sourceType": "module"
        },
        "globals": {
            "zen": true,
            "$": true,
            "wx": true,
            "Vue": true,
            "__webpack_public_path__": true
        },
        "rules": {
            "no-useless-escape": 0,
            "no-debugger": 0,
            "vue/multi-word-component-names": 0,
            "no-case-declaration": 0,
            "vue/no-mutating-props": 0
        }
    },
    "browserslist": [
        "last 1 chrome version",
        "last 1 firefox version",
        "last 1 safari version"
    ]
}
